// examen_parcial1.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "conio.h"	
#include <iostream>

using namespace std;


void main()
{
	int  x,i,n,s=0;
	float y;
	cout<<"ingrese el valor de x: "<<endl;
	cin>>x;
	cout<<"ingrese hasta donde quiere su serie: "<<endl;
	cin>>n;
	
	do{
		y=(1+(1/x));

		for ( i=1; i<=n;i++)
			s=s+pow(y,1);
	}while (n>0 && x>0);
	cout<<"el resultado es: "<<s<<endl;
	getch();
}
